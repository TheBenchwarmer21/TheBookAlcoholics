<%- include ('../partials/nonuser_header') %>

<main>
  <div class="container">
    <% if (typeof message !== 'undefined' && message) { %>
      <div class="alert alert-success" role="alert" style="max-width: 400px; margin: 20px auto; text-align: center;">
        <%= message %>
      </div>
    <% } %>
    <div class="login-container" style="max-width: 400px; margin: 50px auto; padding: 20px; border: 1px solid #ccc; border-radius: 5px;">
      <h2>Login</h2>

      <!-- Add a banner here (create new commit comment for login page here) -->
      <div class="alert alert-info" role="alert" style="max-width: 400px; margin: 10px auto; text-align: center;">
        Welcome back! Please log in to your Bookaholics account.
      </div>

      <form action="/login" method="POST">
        <div style="margin-bottom: 20px;">
          <label for="username" style="display: block; margin-bottom: 5px;">Username:</label>
          <input type="text" id="username" name="username" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px;" required>
        </div>
        
        <div style="margin-bottom: 20px;">
          <label for="password" style="display: block; margin-bottom: 5px;">Password:</label>
          <input type="password" id="password" name="password" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px;" required>
        </div>

        <div>
          <button type="submit" style="padding: 10px 15px; border: none; background-color: #007BFF; color: white; border-radius: 4px; cursor: pointer;">Login</button>
        </div>

        <div style="margin-top: 10px;">          
          Don't have an account? <a href="/register">Register here</a>
        </div>
      </form>
    </div>
  </div>
</main>

<%- include ('../partials/footer') %>
