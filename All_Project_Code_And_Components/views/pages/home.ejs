            <!-- Suman's Welcome Message based on time -->
            <script>
                var currentHour = new Date().getHours();
                var greeting;
                if (currentHour < 12) {
                    greeting = "Good Morning";
                } else if (currentHour < 18) {
                    greeting = "Good Afternoon";
                } else {
                    greeting = "Good Evening";
                }
            </script>
            <h1><center><script>document.write(greeting)</script></center></h1>
            <!-- End of Suman Code -->
            
