<%- include ('../partials/header') %>

<!DOCTYPE html>
<html>
<head>
    <title>Book Reviews</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-size: cover;
        }

        .reviews-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            padding: 20px;
        }

        .review-card {
            background-color: rgb(229, 221, 221);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            border-radius: 8px;
            overflow: hidden;
        }

        .card-body {
            padding: 15px;
        }

        .card-title {
            color: #333;
            font-size: 1.2em;
            margin-bottom: 10px;
        }

        .card-text {
            color: #333;
            font-size: 1em;
        }

        .card-rating {
            font-weight: bold;
            color: #4CAF50;
            margin-top: 10px;
        }

        .card-subtitle {
            color: #666;
            font-size: 1em;
            margin-top: 15px;
            text-align: right;
        }
    </style>
</head>
<body>

    <div class="container mt-4">
        <h1>Book Reviews</h1>
        <div class="reviews-container">
            <% if(reviews.length > 0) { %>
                <% reviews.forEach(function(review) { %>
                    <div class="review-card">
                        <div class="card-body">
                            <h5 class="card-title"><%= review.review_title %></h5>
                            <p class="card-text"><strong>Review:</strong> <%= review.review %></p>
                            <div class="card-rating"><strong>Rating:</strong> <%= review.rating %></div>
                            <h6 class="card-subtitle">Reviewed by: <%= review.username %></h6>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p>No reviews found.</p>
            <% } %>
        </div>
    </div>
</body>
</html>

<%- include ('../partials/footer') %>
