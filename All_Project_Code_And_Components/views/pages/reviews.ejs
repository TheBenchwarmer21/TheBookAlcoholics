<%- include ('../partials/header') %>

<!DOCTYPE html>
<html>
<head>
    <title>Book Reviews</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
    body {
        /* background-image: url('/img/nice.jpg'); */
        background-size: cover;
        background-position: center;
        height: 100vh;
        margin: 0;
    }

        .reviews-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            padding: 20px;
        }

        .review-card {
            background-color: rgb(229, 221, 221);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            border-radius: 8px;
            overflow: hidden;
        }

        .card-body {
            padding: 15px;
        }

        .card-title {
            color: #333;
            font-size: 1.2em;
            margin-bottom: 10px;
        }
        .average-rating {
        color: #4CAF50; 
    }

        .card-text {
            color: #333;
            font-size: 1em;
        }

        .card-rating {
            font-weight: bold;
            color: #4CAF50;
            margin-top: 10px;
        }

        .card-subtitle {
            color: #666;
            font-size: 1em;
            margin-top: 15px;
            text-align: right;
        }

        .banner {
        background-color: #34495e; /* Dark blue */
        color: white;
        padding: 20px;
        text-align: center;
        margin-bottom: 20px;
    }

    </style>
</head>
<body>

    <div class="container mt-4">
        <!-- Banner -->
        <div class="banner">
            <h1>Book Reviews</h1>
        </div>

        <!-- Button for Adding Review -->
        <button type="button" class="btn btn-primary mb-3" data-toggle="modal" data-target="#addReviewModal">
            Add Review
        </button>

        <!-- Reviews Container for Grouped Reviews -->
        <div class="reviews-container">
            <% if(Object.keys(groupedReviews).length > 0) { %>
                <% for(let title in groupedReviews) { %>
                    <div>
                        <h3><%= title %> Average Rating: <span class="average-rating"><%= groupedReviews[title].averageRating %></span></h3></h3>
                <div style="display: flex; flex-wrap: wrap;">
                    <% groupedReviews[title].reviews.forEach(function(review) { %>
                        <div class="review-card" style="flex: 1; min-width: 300px;">
                            <div class="card-body">
                                <h5 class="card-title"><%= review.review_title %></h5>
                                <p class="card-text"><strong>Review:</strong> <%= review.review %></p>
                                <div class="card-rating"><strong>Rating:</strong> <%= review.rating %></div>
                                <h6 class="card-subtitle">Reviewed by: <%= review.username %></h6>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        <% } %>
    <% } else { %>
        <p>No reviews found.</p>
    <% } %>
</div>


    <!-- Modal -->
    <div class="modal fade" id="addReviewModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalLabel">Add a New Book Review</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form method="POST" action="/add_reviews">
                        <div class="form-group">
                            <label for="review_title">Review Title:</label>
                            <input type="text" class="form-control" id="review_title" name="review_title" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="review">Review:</label>
                            <textarea class="form-control" id="review" name="review" required></textarea>
                        </div>
                        <div class="form-group">
                            <label for="rating">Rating:</label>
                            <input type="number" class="form-control" id="rating" name="rating" min="1" max="5" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit Review</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

<%- include ('../partials/footer') %>
