<%- include ('../partials/header') %>

<style>
    .btn-action {
        border: none;
        color: white;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        background-color: #6d7f6e; /* Light green */
    }

    body {
        background-image: url('/img/nice.jpg');
        background-size: cover;
        background-position: center;
        height: 100vh;
        margin: 0;
    }

    .btn-action:hover {
        background-color: #0bf139; /* Slightly darker green on hover */
    }

    .btn-remove {
        background-color: rgb(134, 71, 71); /* Light red */
    }

    .btn-remove:hover {
        background-color: rgb(236, 59, 59); /* Slightly darker red on hover */
    }

    .external-link-icon {
        margin-left: 5px;
        font-size: 14px;
    }

    .banner {
        background-color: #34495e; /* Dark blue */
        color: white;
        padding: 20px;
        text-align: center;
        margin-bottom: 20px;
    }

    .search-bar {
        margin-bottom: 20px;
    }

    .pagination-buttons {
        display: flex;
        justify-content: space-between;
    }

    .book-count {
        text-align: center;
        margin-top: 10px;
        margin-bottom: 20px;
        font-weight: bold; /* Add this line to make the text bold */
    }

    .search-bar {
        margin-bottom: 20px;
        text-align: center; /* Center the search bar */
    }
</style>

<main>
    <div class="container">
        <p></p>
        <!-- Banner  -->
        <div class="banner">
            <h1>My Book Collection</h1>
        </div>

        <!-- Search Form -->
        <form action="/searchbarresult" method="GET" class="search-bar">
            <!-- Title Search -->
            <div class="form-group row">
                <!-- Search Input -->
                <div class="col-8" style="text-align:center">
                    <input type="text" id="userSearch" placeholder="Search Book Collection!" name="userSearch" required class="form-control" />
                </div>
                
                <!-- Search Button -->
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary" value="Search"> Search </button>
                </div>
                <!-- Search by Author or Title -->
                <div class="col-auto">
                    <div class="btn-group btn-group-toggle" data-toggle="buttons">
                        <label class="btn btn-secondary active">
                          <input type="radio" name="searchOption" id="titleOption" value="intitle:" checked> Search By Title
                        </label>
                        <label class="btn btn-secondary">
                          <input type="radio" name="searchOption" id="authorOption" value="inauthor:"> Search By Author
                        </label>
                    </div>
                </div>
            </div>
        </form>

        <!-- Book Count -->
        <div class="book-count">
            <p>Total Books in Collection: <%= Mybooks.length %></p>
        </div>

        <!-- Book collection  -->
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% Mybooks.forEach(book => { %>
                    <tr>
                        <td><%= book.book_name %></td>
                        <td><%= book.author %></td>
                        <td>
                            <!-- Read Button -->
                            <% if (book.book_url) { %>
                                <button onclick="window.open('<%= book.book_url %>', '_blank')" class="btn-action">
                                    Read
                                    <i class="external-link-icon">&#x2197;</i>
                                </button>
                            <% } else { %>
                                <span>Not available</span>
                            <% } %>

                            <!-- Remove Button -->
                            <form action="/remove_book" method="post" style="display: inline;">
                                <input type="hidden" name="bookId" value="<%= book.book_id %>">
                                <button type="submit" class="btn-action btn-remove">Remove</button>
                            </form>

                            <!-- Add Review Button -->
                            <button type="button" class="btn-action" data-toggle="modal" data-target="#addReviewModal-<%= book.id %>">
                                Add Review
                            </button>

                            <!-- Modal for Adding Review -->
                            <div class="modal fade" id="addReviewModal-<%= book.id %>" tabindex="-1" role="dialog" aria-labelledby="modalLabel-<%= book.id %>" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="modalLabel-<%= book.id %>">Add a New Review for <%= book.title %></h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <form method="POST" action="/add_reviews">
                                                <input type="hidden" name="book_id" value="<%= book.id %>">
                                                <div class="form-group">
                                                    <label for="review_title">Review Title:</label>
                                                    <input type="text" class="form-control" id="review_title" name="review_title" required>
                                                </div>
                                                
                                                <div class="form-group">
                                                    <label for="review">Review:</label>
                                                    <textarea class="form-control" id="review" name="review" required></textarea>
                                                </div>
                                                <div class="form-group">
                                                    <label for="rating">Rating:</label>
                                                    <input type="number" class="form-control" id="rating" name="rating" min="1" max="5" required>
                                                </div>
                                                <button type="submit" class="btn btn-primary">Submit Review</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</main>

<%- include ('../partials/footer') %>
